{% extends 'message/new.html.twig' %}

{% block title %}Hello MessageController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

  {{ form_start(form) }}
    {{ form_widget(form) }}
        

  {# exemples de deux boutton, le premier est un bouton classique #}
    <button class="btn btn-lg btn-primary mt-3" type="submit">
            Send your message
    </button>
</div>
  {# Celui-ci est un bouton twig #}
    <div class = "text-center mx-3">
      <button class="btn btn-success btn-lg my-5 " >{{ button_label|default('Enregistrer') }}</button>
    </div>
  {{ form_end(form)}}
</div>
{% endblock %}


